@page "{id}"
@model EdgeDb.Pages.EditContactModel
@{
    ViewData["Title"] = "Edit Contact";
}
<form method="post" class="m-3">
    <h2>Edit Contact</h2>
    <hr />
    <input type="hidden" asp-for="Contact.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Contact.FirstName" class="form-label"></label>
        <input asp-for="Contact.FirstName" class="form-control" />
        <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.LastName" class="form-label"></label>
        <input asp-for="Contact.LastName" class="form-control" />
        <span asp-validation-for="Contact.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Email" class="form-label"></label>
        <input asp-for="Contact.Email" class="form-control" />
        <span asp-validation-for="Contact.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Username" class="form-label"></label>
        <input asp-for="Contact.Username" class="form-control" />
        <span asp-validation-for="Contact.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Password" class="form-label"></label>
        <input asp-for="Contact.Password" type="password" class="form-control" />
        <span asp-validation-for="Contact.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Role" class="form-label">Role</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Contact.Role" value="Normal" />
            <label class="form-check-label">Normal</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Contact.Role" value="Admin" />
            <label class="form-check-label">Admin</label>
        </div>
        <span asp-validation-for="Contact.Role" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Title" class="form-label"></label>
        @Html.DropDownListFor(
        m => m.Contact.Title,
        new SelectList(Enum.GetValues(typeof(TitleEnum))),
        "Select Title",
        new { @class = "form-control" }
        )
        <span asp-validation-for="Contact.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.Description" class="form-label"></label>
        <input asp-for="Contact.Description" class="form-control" />
        <span asp-validation-for="Contact.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.DateofBirth" class="form-label"></label>
        <input asp-for="Contact.DateofBirth" class="form-control" type="date" />
        <span asp-validation-for="Contact.DateofBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact.IsMarried" class="form-label">Is Married?</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for = "Contact.IsMarried" name="radgroup" value="Yes" />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Contact.IsMarried" name="radgroup" value="No" />
            <label class="form-check-label">No</label>
        </div>
        <span asp-validation-for="Contact.IsMarried" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./ContactsList">Back to List</a>
</form>

<style type="text/css">
    .mb-3 {
        margin-bottom: 1.5rem;
    }
</style>
